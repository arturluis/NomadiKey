        android:text="@string/tvInputStroke"
        android:paddingTop="10dp"
        android:textSize="25dp"
        android:id="@+id/tvInput"
        android:layout_weight="0"/>

    <include layout="@layout/std_keyboard"/>

    <include layout="@layout/cancel_confirm_layout"/>

</RelativeLayout>
